<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"
    integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <title>Admin HOme</title>
</head>


<body class="bg-slate-900">
  <%- include("./partials/adminNav") %>


    <div class="w-full flex flex-row justify-center sm:justify-between ">
      <div id="sidebar" class=" hidden w-7/12 sm:flex justify-center items-center sm:w-3/12 bg-slate-800 h-[85vh] absolute sm:static left-0" style="z-index: 99;">
        <div id="navMenu" class="flex flex-col justify-center items-center gap-2 ">
          <a href="#" class="  text-gray-200 hover:text-white  py-1 px-2 rounded-md">Dashboard</a>
          <a href="#" class="  text-gray-200 hover:text-white  py-1 px-2 rounded-md">Users </a>
          <a href="#" class="  text-gray-200 hover:text-white  py-1 px-2 rounded-md">Tickets</a>
          <div class="flex flex-col ">
            <button class="sidebar-button  text-gray-200 hover:text-white  py-1 px-2 rounded-md"
              onclick="toggleDropdown('events')">Events</button>
            <ul id="events-dropdown" class="dropdown hidden ml-10 mt-2">
              <li><a href="/adminHome#events"
                  class=" text-gray-200 hover:text-white  py-1 px-2 rounded-md text-sm text-gray-300">Show All</a></li>
              <li><a href="/addEvent"
                  class=" text-gray-200 hover:text-white  py-1 px-2 rounded-md text-sm text-gray-300">Add Event</a></li>

            </ul>
          </div>
          <div class="flex flex-col ">
            <button class="sidebar-button  text-gray-200 hover:text-white  py-1 px-2 rounded-md"
              onclick="toggleDropdown('settings')">Users</button>
            <ul id="settings-dropdown" class="dropdown hidden ml-10 mt-2">
              <li><a href="#"
                  class=" text-gray-200 hover:text-white  py-1 px-2 rounded-md text-sm text-gray-300">Users List</a></li>
              <li><a href="#"
                  class=" text-gray-200 hover:text-white  py-1 px-2 rounded-md text-sm text-gray-300">Active Users</a></li>

            </ul>
          </div>
        </div>
      </div>
    <div class="flex flex-col">
      <div class="w-10/12 mx-auto " style="z-index: 8;">
        <div class="flex flex-col sm:flex-row my-4  sm:my-12 gap-3 justify-center items-center">
          <div class=" bg-slate-900 rounded-md border-2 h-28 border-gray-600 ">
            <span class="text-gray-300 m-3 text-sm">Events</span>
            <a href="/currentEvents"
              class=" mt-5 flex justify-center items-center text-white w-[15rem] font-bold text-lg">
              242
            </a>
          </div>
          <div class=" bg-slate-900 rounded-md border-2 h-28 border-gray-600 ">
            <span class="text-gray-300 m-3 text-sm">Tickets</span>
            <a href="/currentEvents"
              class=" mt-5 flex justify-center items-center text-white w-[15rem] font-bold text-lg">
              24232
            </a>
          </div>
          <div class=" bg-slate-900 rounded-md border-2 h-28 border-gray-600 ">
            <span class="text-gray-300 m-3 text-sm">Users</span>
            <a href="/currentEvents"
              class=" mt-5 flex justify-center items-center text-white w-[15rem] font-bold text-lg">
              24232
            </a>
          </div>
        </div>
      </div>
      <div class="my-12 sm:w-10/12 w-[20rem] overflow-x-scroll sm:overflow-x-auto  mx-auto" id="events">
        <table class="min-w-full border rounded-md border-gray-500">
          <thead>
            <tr>
              <th class="px-1 text-white py-2">Event Name</th>
              <th class="px-4 text-white py-2">Start Date</th>
              <th class="px-4 text-white py-2">End Date</th>
              <th class="px-4 text-white py-2">Status</th>
              <th class="px-4 text-white py-2">Action</th>
            </tr>
          </thead>
          <tbody>
            <% events.forEach(event=> { %>
              <tr>
                <td class=" px-4 text-white py-2"><%= event.eventName %></td>
                <td class=" px-4 text-white py-2"><%= moment(event.startdate).format('DD/MM/YY'); %></td>
                <td class=" px-4 text-white py-2"><%= moment(event.enddate).format('DD/MM/YY'); %></td>
                <td class=" px-4 text-white py-2"><%= event.eventEnds ? "Ended" : "Waiting" %></td>
                <td class=" px-4 text-white py-2"><a href="/eventDraw/<%= event._id %>" class="py-2  px-3 bg-blue-400 rounded-md text-white font-bold w-full">Enter</a></td>
              </tr>
              <% }) %>
          </tbody>
        </table>

      </div>


      <div class="my-12 sm:w-10/12 w-[21rem] px-3  overflow-x-scroll sm:overflow-x-auto mx-auto">
        <p class="text-white my-2 text-gray-300 text-sm">Users List</p>
        <table class="min-w-full border rounded-md border-gray-500 mx-auto">
          <thead>
            <tr>
              <th class="px-1 text-white py-2">Full Name </th>
              <th class="px-1 text-white py-2">Email</th>
              <th class="px-1 text-white py-2">Phone</th>
              <th class="px-4 text-white py-2">Status</th>
              <th class="px-4 text-white py-2">Action</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(user=> { %>
              <tr>
                <td class=" px-4 text-white py-2">
                  <%= user.name %>
                </td>
                <td class=" px-4 text-white py-2">
                  <%= user.email %>
                </td>
                <td class=" px-4 text-white py-2">
                  <%= user.phone %>
                </td>
                <td class=" px-4 text-white py-2">
                  <%= user.verified ? "verified" : "Not verified" %>
                </td>
                <td class=" px-4 text-white py-2 flex flex-row justify-between gap-2 items-center">
                  <a href="/eventDraw/<%= user._id %>"
                    class="h-8 pt-1  px-3 bg-yellow-400 rounded-md text-black font-bold w-full">View</a>
                  <a href="/eventDraw/<%= user._id %>"
                    class="h-8 pt-1   px-3 bg-red-600  rounded-md text-black font-bold w-full">Del</a>
                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>

      </div>
    </div>
    </div>




    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <%- include("./partials/footer") %>
      <script>
        function toggleDropdown(dropdownId) {
          const dropdown = document.getElementById(dropdownId + '-dropdown');
          dropdown.classList.toggle('hidden');
        }
      </script>
      <script>
        $(document).ready(function() {
      // Code to be executed when the DOM is ready
      $('#adminMenu').click(function() {
        $("#sidebar").toggle()
      });
      $('#closeSidebarBtn').click(function() {
        console.log('first')
        $("#sidebar").hide()
      });
    });
    </script>